{
  "name": "frontend",
  "version": "1.0.0",
  "description": "PongDom frontend",
  "main": "index.js",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jira-prepare-commit-msg": "^1.7.2",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "scripts": {
    "start": "webpack serve --mode development --history-api-fallback",
    "build": "webpack --mode production",
    "prepare": "git config --local commit.template .gitmessage.txt",
    "postinstall": "husky install",
    "format": "prettier --cache --write .",
    "lint": "eslint --cache .",
    "test": "jest",
    "reinstall": "./tools/reinstall.sh",
    "docs": "jsdoc src/* -d docs"
  },
  "jira-prepare-commit-msg": {
    "messagePattern": "$J/$M",
    "ignoredBranchesPattern": "^(master|main|dev|develop|development|release)$"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ]
  }
}
