{
    "name": "frontend",
    "description": "PongDom frontend",
    "type": "module",
    "version": "1.0.0",
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.1",
        "@babel/preset-env": "^7.23.8",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "jira-prepare-commit-msg": "^1.7.2",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.1"
    },
    "scripts": {
        "prepare": "git config --local commit.template .gitmessage.txt",
        "postinstall": "husky install",
        "format": "prettier --cache --write .",
        "lint": "eslint --cache .",
        "test": "jest"
    },
    "jira-prepare-commit-msg": {
        "messagePattern": "$J/$M",
        "ignoredBranchesPattern": "^(master|main|dev|develop|development|release)$"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --cache --fix",
            "prettier --cache --write"
        ]
    }
}
